{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aim",
  "version": "0.1.0",
  "identifier": "dev.itsthesteve.apps.aim",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../dist",
    "beforeBuildCommand": "npm run build:app"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "main",
        "width": 220,
        "height": 400,
        "decorations": false,
        "acceptFirstMouse": true,
        "backgroundColor": "#ddd"
      }
    ],
    "security": {
      "csp": null,
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../dist-isolation"
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
